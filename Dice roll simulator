import random 
while True:
    
     print('''--------------------------------------------------------------------------------------
            1. roll the dice 
            2. exit     ''')  
            
     user = int(input("Press '1'to roll the dice || Press '2' to Exit\n"))  
     
     if user==1:         
        number = random.randint(1,6)
        print("Dice roll :")
        print(number) 
        
     else:         
        break
